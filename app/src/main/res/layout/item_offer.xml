<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="8">

        <ImageView
            android:id="@+id/img_offer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            />
        <TextView
            android:id="@+id/txt_store_offer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="#f4b23d"
            android:layout_weight="0.8"
            android:textSize="@dimen/textSize_nameStoreOffers"
            />
        <TextView
            android:id="@+id/txt_description_offer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/textSize_descriptionOffers"
            />
        <TextView
            android:id="@+id/txt_date_offer"
            android:textColor="#FFFFFF"
            android:layout_weight="0.5"
            android:textSize="@dimen/textSize_descriptionOffers"
            android:layout_width="match_parent"
            android:layout_height="0dp" />


</LinearLayout>